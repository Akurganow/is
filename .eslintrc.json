{
    "env": {
        "browser": true,
        "esnext": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
		"no-tabs": [0],
		"block-spacing": [2, "always"],
		"object-curly-spacing": [2, "always"],
		"semi": [2, "never"],
		"quotes": [2, "single"],
		"indent": [2, "tab"]
	}
}
